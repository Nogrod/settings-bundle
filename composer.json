{
  "name": "jbtronics/settings-bundle",
  "type": "symfony-bundle",
  "license": "MIT",
  "description": "A symfony bundle to easily define and use user specific configuration",
  "keywords": ["settings", "config", "symfony", "symfony-bundle"],
  "autoload": {
    "psr-4": {
      "Jbtronics\\SettingsBundle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Jbtronics\\SettingsBundle\\Tests\\TestApplication\\": "tests/TestApplication/src/",
      "Jbtronics\\SettingsBundle\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Jan BÃ¶hmer",
      "email": "mail@jan-boehmer.de"
    }
  ],
  "suggest": {
    "symfony/twig-bridge": "Allows to access settings in twig templates",
  },
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "symfony/framework-bundle": "^6.4|^7.0",
    "symfony/translation-contracts": "^2.5|^3.0",
    "spatie/php-structure-discoverer": "^2.0",
    "symfony/validator": "^6.4|^7.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "symfony/phpunit-bridge": "^6.4|^7.0",
    "phpunit/phpunit": "^9.5",
    "symfony/security-csrf": "^7.0|^6.4",
    "phpstan/phpstan": "^1.10",
    "ekino/phpstan-banned-code": "^1.0",
    "phpstan/phpstan-strict-rules": "^1.5",
    "phpstan/extension-installer": "^1.3",
    "symfony/twig-bridge": "^6.4|^7.0"
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  }
}
